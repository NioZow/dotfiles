#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty
# program launcher
super + shift + Return
  rofi -show drun

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# close and kill
super + {_,shift + }w
    bspc node -{c,k}

# swap the current node and the biggest node
super + s
    bspc node -s biggest

# set the window state
super + {g,space,f}
    bspc node -t {tiled,floating,fullscreen}

#
# focus/swap
#

# expand a window by moving one of its side outward
super + ctrl + {h,j,k,l}
   bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# same but inward
super + ctrl + shift + {h,j,k,l}
   bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Lockscreen
super + q
	betterlockscreen -l dim

# Move the current window if not tiling
# Move left and right
super + {h,l}
	xdotool getactivewindow windowmove --relative -- {-20,20} 0

# Move up and down
super + {j,k}
	xdotool getactivewindow windowmove --relative -- 0 {20,-20}

# Switch to a desktop
super + shift + {a,z,e,r,t}
	bspc desktop -f {1,2,3,4,5}

# Switch a window to a desktop
super + {a,z,e,r,t}
	bspc node -d {1,2,3,4,5} --to-desktop

#
# move/resize
#

# move a floating window
super + ctrl + {h,j,k,l}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# focus the last node/desktop
alt + Tab
	bspc node -f last

alt + shift + Tab
	bspc desktop -f last

# Custom application shortcuts

# Firefox
alt + f
    firefox

# VSCode
alt + c
    code

# Burpsuite
alt + b
    burp
